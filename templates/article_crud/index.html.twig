{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}
{% block stylesheets%}
	<link rel="stylesheet" href="{{asset('css/articleCrud.css')}}">
{% endblock %}
{% block body %}
	<h1>Article editor</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>

					<td>{{ article.titre }}</td>
					<td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
					<td>
						<a class='button' href="{{ path('app_article_crud_show', {'id': article.id}) }}">show</a>
						<a class='button' href="{{ path('app_article_crud_edit', {'id': article.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class ='button create' href="{{ path('app_article_crud_new') }}">Create new</a>
{% endblock %}
